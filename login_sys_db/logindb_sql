CREATE DATABASE scrum_users;

USE scrum_users;

create table users
(
    id       int auto_increment,
    email    varchar(255) not null,
    pwd      varchar(255) not null,
    username varchar(255) not null,
    constraint id
        primary key (id)
);

create table teams
(
    id        integer      null,
    team_name varchar(255) null,
    member_1  varchar(255) null,
    member_2  varchar(255) null,
    member_3  varchar(255) null,
    member_4  varchar(255) null
);


create table register
(
    id              integer      null,
    register_status varchar(255) null,
    user_login_id   integer      null
);


create table tournament_ranks
(
    id           int auto_increment,
    team_id      int not null,
    team_ranking int not null,
    constraint id
        primary key (id)
);



