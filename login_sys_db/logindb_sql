CREATE DATABASE scrum_users;

USE scrum_users;

create table users
(
    id       int auto_increment,
    email    varchar(255) not null,
    pwd      varchar(255) not null,
    username varchar(255) not null,
    constraint id
        primary key (id)
);

create table teams
(
    id        int auto_increment,
    team_name varchar(255) not null,
    member_1  int          not null,
    member_2  int          not null,
    member_3  int          not null,
    member_4  int          not null,
    constraint id
        primary key (id)
);

create table register
(
    id                int auto_increment,
    register_nickname varchar(255) not null,
    register_team_id  int          not null,
    register_status   varchar(255) not null,
    constraint id
        primary key (id)
);

create table tournament_ranks
(
    id           int auto_increment,
    team_id      int not null,
    team_ranking int not null,
    constraint id
        primary key (id)
);



